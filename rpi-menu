#!/bin/bash

if [[ $EUID -ne 0 ]]; then
    echo "This script should only be run as root"
    exit 1
fi

function logo {
		echo "$(tput setaf 2)
   .~~.   .~~.
  '. \ ' ' / .'$(tput setaf 1)
   .~ .~~~..~.
  : .~.'~'.~. :
 ~ (   ) (   ) ~
( : '~'.~.'~' : )
 ~ .~ (   ) ~. ~
  (  : '~' :  ) $(tput sgr0)Raspberry Pi$(tput setaf 1)
   '~ .~~~. ~'
       '~'
$(tput sgr0)"
sleep 2s
}
 
while getopts "ufrsgch" opt; do
  case "$opt" in
	u)
		logo && sudo apt-get update && sudo apt-get dist-upgrade -y
	;;
	f)
		logo && sudo rpi-update
	;;
	r)
		sudo shutdown -r now
	;;
	s)
		sudo shutdown -h now
	;;
	g)
		sudo startx
	;;
	c)
		logo && cd /media/HDD/youtube && ./convert.sh
	;;
	h)
		logo
		echo "-u	update"
		echo "-f	update firmware"
		echo "-r	reboot"
		echo "-s	shutdown"
		echo "-g	start gui"
		echo "-c	convert youtube to mp3"
		exit
	;;
  esac
done